<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.web>
    <!-- Compilation settings for .NET Framework 3.5 -->
    <compilation debug="true" />
    
    <!-- Authentication settings -->
    <authentication mode="Forms">
      <forms loginUrl="~/Login.aspx" timeout="30" />
    </authentication>
    
    <!-- Authorization settings -->
    <authorization>
      <allow users="*" />
    </authorization>
    
    <!-- Page settings -->
    <pages enableViewState="true" enableViewStateMac="true" validateRequest="true" />
    
    <!-- Custom error pages -->
    <customErrors mode="RemoteOnly" defaultRedirect="~/Error.aspx">
      <error statusCode="404" redirect="~/NotFound.aspx" />
      <error statusCode="500" redirect="~/Error.aspx" />
    </customErrors>
    
    <!-- Session state -->
    <sessionState mode="InProc" cookieless="false" timeout="30" />
    
    <!-- Globalization settings -->
    <globalization requestEncoding="utf-8" responseEncoding="utf-8" culture="en-US" uiCulture="en-US" />
    
    <!-- Security and request validation -->
    <httpRuntime maxRequestLength="4096" />
  </system.web>
  
  <!-- System.webServer for IIS 7+ (minimal configuration to avoid locked sections) -->
  <system.webServer>
    <validation validateIntegratedModeConfiguration="false"/>
  </system.webServer>
  
  <!-- Connection strings (example) -->
  <connectionStrings>
    <add name="DefaultConnection" 
         connectionString="Data Source=(local);Initial Catalog=LegacyWebApp;Integrated Security=True" 
         providerName="System.Data.SqlClient" />
  </connectionStrings>
  
  <!-- Application settings -->
  <appSettings>
    <add key="ApplicationName" value="Legacy Web Application" />
    <add key="ApplicationVersion" value="1.0.0" />
    <add key="SupportEmail" value="support@legacywebapp.com" />
    <add key="EnableDebugMode" value="true" />
  </appSettings>
</configuration>